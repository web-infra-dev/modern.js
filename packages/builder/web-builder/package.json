{
  "name": "@modern-js/web-builder",
  "description": "Web builder of modern.js.",
  "homepage": "https://modernjs.dev",
  "bugs": "https://github.com/modern-js-dev/modern.js/issues",
  "repository": "modern-js-dev/modern.js",
  "license": "MIT",
  "keywords": [
    "react",
    "framework",
    "modern",
    "modern.js"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "version": "1.0.0-alpha.0",
  "jsnext:source": "./src/index.ts",
  "types": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "jsnext:modern": "./dist/index.js",
  "exports": {
    ".": {
      "jsnext:source": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "prepare": "pnpm build",
    "prepublishOnly": "only-allow-pnpm",
    "new": "modern new",
    "build": "wireit",
    "compile:ajv": "node ./scripts/compile-ajv.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest dev"
  },
  "dependencies": {
    "@babel/core": "^7.18.0",
    "@modern-js/babel-preset-app": "workspace:^1.5.0",
    "@modern-js/utils": "workspace:^1.8.1",
    "css-minimizer-webpack-plugin": "4.0.0",
    "fork-ts-checker-webpack-plugin": "^7.2.1",
    "terser-webpack-plugin": "5.3.3",
    "ts-loader": "^9.2.5",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "webpack": "^5.71.0"
  },
  "devDependencies": {
    "@scripts/build": "workspace:*",
    "@scripts/vitest-config": "workspace:*",
    "@types/babel__core": "^7.1.19",
    "@types/babel__preset-env": "^7.9.2",
    "@types/lodash": "^4.14.182",
    "@types/node": "^14",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "vitest": "^0.21.1",
    "typescript": "^4"
  },
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "types": "./dist/index.d.ts"
  },
  "wireit": {
    "build": {
      "command": "tsc && node scripts/compile-ajv.js",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json"
      ],
      "output": [
        "dist/**/*",
        "compiled/config-validate/**/*"
      ]
    }
  }
}
