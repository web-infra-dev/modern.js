{
  "name": "@modern-js/web-builder",
  "description": "Web builder of modern.js.",
  "homepage": "https://modernjs.dev",
  "bugs": "https://github.com/modern-js-dev/modern.js/issues",
  "repository": "modern-js-dev/modern.js",
  "license": "MIT",
  "keywords": [
    "react",
    "framework",
    "modern",
    "modern.js"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "version": "1.0.0-alpha.0",
  "jsnext:source": "./src/index.ts",
  "types": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "jsnext:modern": "./dist/index.js",
  "exports": {
    ".": {
      "jsnext:source": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "prepare": "pnpm build",
    "prepublishOnly": "only-allow-pnpm",
    "new": "modern new",
    "build": "wireit",
    "dev": "tsc --watch",
    "test": "wireit",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch"
  },
  "dependencies": {
    "@modern-js/utils": "workspace:^1.7.12",
    "ajv": "^8.11.0",
    "css-minimizer-webpack-plugin": "4.0.0",
    "lodash": "^4.17.21",
    "schema-utils": "3.1.1",
    "terser-webpack-plugin": "5.3.3",
    "webpack": "^5.71.0"
  },
  "devDependencies": {
    "@scripts/build": "workspace:*",
    "@scripts/jest-config": "workspace:*",
    "@types/jest": "^27",
    "@types/lodash": "^4.14.182",
    "@types/node": "^14",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "jest": "^27",
    "typescript": "^4"
  },
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "types": "./dist/index.d.ts"
  },
  "wireit": {
    "build": {
      "command": "tsc",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json"
      ],
      "output": [
        "dist/**/*"
      ]
    },
    "test": {
      "command": "NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json",
        "tests/**/*"
      ],
      "output": []
    }
  }
}
