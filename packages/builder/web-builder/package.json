{
  "private": true,
  "name": "@modern-js/web-builder",
  "description": "Web builder of modern.js.",
  "homepage": "https://modernjs.dev",
  "bugs": "https://github.com/modern-js-dev/modern.js/issues",
  "repository": "modern-js-dev/modern.js",
  "license": "MIT",
  "keywords": [
    "react",
    "framework",
    "modern",
    "modern.js"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "version": "1.0.0-alpha.0",
  "jsnext:source": "./src/index.ts",
  "types": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "jsnext:modern": "./dist/index.js",
  "exports": {
    ".": {
      "jsnext:source": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./webpack": {
      "jsnext:source": "./src/exports/webpack.ts",
      "default": "./dist/exports/webpack.js"
    },
    "./html-webpack-plugin": {
      "jsnext:source": "./src/exports/HtmlWebpackPlugin.ts",
      "default": "./dist/exports/HtmlWebpackPlugin.js"
    }
  },
  "scripts": {
    "prepare": "pnpm build",
    "prepublishOnly": "only-allow-pnpm",
    "new": "modern new",
    "build": "wireit",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest dev --no-coverage"
  },
  "dependencies": {
    "@modern-js/babel-preset-app": "workspace:*",
    "@modern-js/utils": "workspace:*",
    "@pmmmwh/react-refresh-webpack-plugin": "0.5.5",
    "@svgr/webpack": "6.2.1",
    "@types/mini-css-extract-plugin": "2.2.0",
    "css-minimizer-webpack-plugin": "4.0.0",
    "fork-ts-checker-webpack-plugin": "6.5.2",
    "html-webpack-plugin": "5.3.2",
    "mini-css-extract-plugin": "2.4.5",
    "react-refresh": "0.12.0",
    "style-loader": "3.3.1",
    "terser-webpack-plugin": "5.3.3",
    "ts-loader": "9.3.1",
    "webpack": "^5.71.0"
  },
  "devDependencies": {
    "@babel/core": "7.18.0",
    "@scripts/vitest-config": "workspace:*",
    "@types/babel__core": "^7.1.19",
    "@types/babel__preset-env": "^7.9.2",
    "@types/node": "^14",
    "autoprefixer": "^10.4.8",
    "postcss": "^8.4.14",
    "typescript": "^4",
    "vitest": "^0.21.1"
  },
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "types": "./dist/index.d.ts"
  },
  "wireit": {
    "build": {
      "command": "tsc && node scripts/compile-ajv.js",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json"
      ],
      "output": [
        "dist/**/*",
        "compiled/config-validate/**/*"
      ]
    }
  }
}
