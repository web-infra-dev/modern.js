{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "target": "ES2019",
    "declaration": true,
    "outDir": "./dist",
    "jsx": "preserve",
    "baseUrl": "./",
    "isolatedModules": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
    "types": ["webpack", "node"]
  },
  "include": ["src"]
}
