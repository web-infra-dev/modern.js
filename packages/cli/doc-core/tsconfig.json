{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "declaration": false,
    "strict": false,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "rootDir": ".",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"],
      "@style/*": ["./styles/*"],
      "@theme": ["./theme-default/index.ts"]
    }
  },
  "include": [
    "src",
    "vitest.config.ts",
    "./modern.config.ts",
    "./tailwind.config.ts"
  ],
  "exclude": ["runtime.ts", "theme.ts", "node_modules"]
}
