{
  "name": "@modern-js/plugin-i18n",
  "description": "The meta-framework suite designed from scratch for frontend-focused modern web development.",
  "homepage": "https://modernjs.dev",
  "bugs": "https://github.com/modern-js-dev/modern.js/issues",
  "repository": "modern-js-dev/modern.js",
  "license": "MIT",
  "keywords": [
    "react",
    "framework",
    "modern",
    "modern.js"
  ],
  "version": "1.3.0",
  "jsnext:source": "./src/index.ts",
  "types": "./src/index.ts",
  "main": "./dist/js/node/index.js",
  "module": "./dist/js/treeshaking/index.js",
  "jsnext:modern": "./dist/js/modern/index.js",
  "typesVersions": {
    "*": {
      "language-detector": [
        "./dist/types/language-detector.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "node": {
        "jsnext:source": "./src/index.ts",
        "import": "./dist/js/modern/index.js",
        "require": "./dist/js/node/index.js"
      },
      "default": "./dist/js/treeshaking/index.js"
    },
    "./language-detector": {
      "node": {
        "jsnext:source": "./src/language-detector.ts",
        "import": "./dist/js/modern/language-detector.js",
        "require": "./dist/js/node/language-detector.js"
      },
      "default": "./dist/js/treeshaking/language-detector.js"
    }
  },
  "scripts": {
    "prepare": "pnpm build",
    "prepublishOnly": "only-allow-pnpm && pnpm build -- --platform",
    "new": "modern new",
    "build": "wireit",
    "test": "wireit"
  },
  "dependencies": {
    "@babel/runtime": "^7.18.0",
    "@modern-js/utils": "workspace:^1.7.12"
  },
  "devDependencies": {
    "@types/jest": "^27",
    "@types/node": "^14",
    "typescript": "^4",
    "@scripts/build": "workspace:*",
    "jest": "^27",
    "@scripts/jest-config": "workspace:*"
  },
  "sideEffects": false,
  "modernConfig": {},
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "types": "./dist/types/index.d.ts",
    "exports": {
      ".": {
        "node": {
          "import": "./dist/js/modern/index.js",
          "require": "./dist/js/node/index.js"
        },
        "default": "./dist/js/treeshaking/index.js"
      },
      "./language-detector": {
        "node": {
          "import": "./dist/js/modern/language-detector.js",
          "require": "./dist/js/node/language-detector.js"
        },
        "default": "./dist/js/treeshaking/language-detector.js"
      }
    }
  },
  "wireit": {
    "build": {
      "command": "modern build",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json"
      ],
      "output": [
        "dist/**/*"
      ]
    },
    "test": {
      "command": "jest --passWithNoTests",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json",
        "tests/**/*"
      ],
      "output": []
    }
  }
}
