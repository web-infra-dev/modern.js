{
  "name": "@modern-js/plugin-tailwindcss",
  "description": "A Progressive React Framework for modern web development.",
  "homepage": "https://modernjs.dev",
  "bugs": "https://github.com/modern-js-dev/modern.js/issues",
  "repository": "modern-js-dev/modern.js",
  "license": "MIT",
  "keywords": [
    "react",
    "framework",
    "modern",
    "modern.js"
  ],
  "version": "2.4.0",
  "jsnext:source": "./src/index.ts",
  "types": "./src/index.ts",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "node": {
        "jsnext:source": "./src/index.ts",
        "require": "./dist/cjs/index.js"
      },
      "default": "./dist/cjs/index.js"
    },
    "./cli": {
      "jsnext:source": "./src/cli.ts",
      "default": "./dist/cjs/cli.js"
    },
    "./runtime-design-token": {
      "jsnext:source": "./src/design-token/index.js",
      "node": "./dist/cjs/design-token/index.js",
      "default": "./dist/esm/design-token/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "runtime-design-token": [
        "./dist/types/design-token/index.d.ts"
      ]
    }
  },
  "scripts": {
    "prepublishOnly": "only-allow-pnpm && pnpm build -- --platform",
    "new": "modern-lib new",
    "dev": "modern-lib build --watch",
    "build": "modern-lib build",
    "test": "jest --passWithNoTests"
  },
  "dependencies": {
    "@babel/runtime": "^7.18.0",
    "@modern-js/utils": "workspace:*",
    "babel-plugin-macros": "3.1.0",
    "hoist-non-react-statics": "^3.3.2"
  },
  "devDependencies": {
    "@modern-js/core": "workspace:*",
    "@modern-js/module-tools": "workspace:*",
    "@modern-js/runtime": "workspace:*",
    "@modern-js/types": "workspace:*",
    "@scripts/build": "workspace:*",
    "@modern-js/app-tools": "workspace:*",
    "@types/jest": "^27",
    "@types/node": "^14",
    "typescript": "^4",
    "tailwindcss": "^3.2.4",
    "jest": "^27",
    "react": "^18",
    "postcss": "8.4.21",
    "@scripts/jest-config": "workspace:*"
  },
  "peerDependencies": {
    "tailwindcss": ">= 2.0.0 || >= 3.0.0",
    "@modern-js/runtime": "workspace:^2.4.0"
  },
  "peerDependenciesMeta": {
    "@modern-js/runtime": {
      "optional": true
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "types": "./dist/types/index.d.ts"
  }
}
