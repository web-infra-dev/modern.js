{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ESNext"],
    "module": "commonjs",
    "target": "ES5",
    "sourceMap": false,
    "jsx": "preserve",
    "baseUrl": "./",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["src/client"]
}
