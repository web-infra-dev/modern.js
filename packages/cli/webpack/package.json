{
  "name": "@modern-js/webpack",
  "description": "The meta-framework suite designed from scratch for frontend-focused modern web development.",
  "homepage": "https://modernjs.dev",
  "bugs": "https://github.com/modern-js-dev/modern.js/issues",
  "repository": "modern-js-dev/modern.js",
  "license": "MIT",
  "keywords": [
    "react",
    "framework",
    "modern",
    "modern.js"
  ],
  "version": "1.18.0",
  "jsnext:source": "./src/index.ts",
  "types": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "jsnext:modern": "./dist/index.js",
  "exports": {
    ".": {
      "node": {
        "jsnext:source": "./src/index.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.js"
      },
      "default": "./dist/index.js"
    },
    "./@loadable/webpack-plugin": "./compiled/@loadable/webpack-plugin/index.js"
  },
  "typesVersions": {
    "*": {
      "@loadable/webpack-plugin": [
        "./compiled/@loadable/webpack-plugin/index.d.ts"
      ]
    }
  },
  "scripts": {
    "prepare": "pnpm build",
    "prepublishOnly": "only-allow-pnpm",
    "new": "modern new",
    "build": "wireit",
    "dev": "tsc --watch",
    "test": "wireit"
  },
  "dependencies": {
    "@babel/core": "^7.18.0",
    "@modern-js/babel-preset-app": "workspace:*",
    "@modern-js/css-config": "workspace:*",
    "@modern-js/utils": "workspace:*",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.5",
    "@svgr/webpack": "^6.2.1",
    "core-js": "^3.25.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "html-loader": "3.1.0",
    "html-webpack-plugin": "^5.3.2",
    "mini-css-extract-plugin": "~2.4.5",
    "node-libs-browser": "^2.2.1",
    "postcss": "^8.4.14",
    "react-refresh": "0.12.0",
    "schema-utils": "^3.1.1",
    "style-loader": "^3.3.1",
    "tapable": "^2.2.1",
    "terser-webpack-plugin": "^5.1.4",
    "ts-loader": "^9.2.5",
    "webpack": "^5.71.0",
    "webpack-sources": "^3.2.3"
  },
  "devDependencies": {
    "@modern-js/core": "workspace:*",
    "@modern-js/types": "workspace:*",
    "@scripts/build": "workspace:*",
    "@scripts/jest-config": "workspace:*",
    "@types/css-minimizer-webpack-plugin": "^3.0.2",
    "@types/jest": "^27",
    "@types/mini-css-extract-plugin": "~2.2.0",
    "@types/node": "^14",
    "jest": "^27",
    "typescript": "^4"
  },
  "sideEffects": false,
  "modernConfig": {
    "output": {
      "packageMode": "node-js"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "types": "./dist/index.d.ts"
  },
  "wireit": {
    "build": {
      "command": "tsc",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json"
      ],
      "output": [
        "dist/**/*"
      ]
    },
    "test": {
      "command": "jest --passWithNoTests",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json",
        "tests/**/*"
      ],
      "output": []
    }
  }
}
