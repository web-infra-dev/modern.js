{
  "name": "@modern-js/plugin-devtools",
  "description": "A Progressive React Framework for modern web development.",
  "homepage": "https://modernjs.dev",
  "bugs": "https://github.com/web-infra-dev/modern.js/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/web-infra-dev/modern.js",
    "directory": "packages/devtools/plugin"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "framework",
    "modern",
    "modern.js"
  ],
  "version": "2.30.0",
  "jsnext:source": "./src/index.ts",
  "types": "./src/index.ts",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "node": {
        "jsnext:source": "./src/index.ts",
        "require": "./dist/cjs/index.js"
      },
      "default": "./dist/cjs/index.js"
    },
    "./cli": {
      "jsnext:source": "./src/cli.ts",
      "default": "./dist/cjs/cli.js"
    },
    "./server": {
      "node": {
        "jsnext:source": "./src/server.ts",
        "import": "./dist/esm-node/server.js",
        "require": "./dist/cjs/server.js"
      },
      "types": "./dist/types/server.d.ts",
      "default": "./dist/esm/server.js"
    }
  },
  "scripts": {
    "prepublishOnly": "only-allow-pnpm",
    "new": "modern-lib new",
    "dev": "modern-lib build --watch --no-dts",
    "build": "modern-lib build",
    "test": "jest --passWithNoTests"
  },
  "dependencies": {
    "@modern-js/devtools-client": "workspace:*",
    "@modern-js/devtools-kit": "workspace:*",
    "@modern-js/devtools-mount": "workspace:*",
    "@modern-js/utils": "workspace:*",
    "birpc": "^0.2.12",
    "get-port": "^5.1.1",
    "p-defer": "^3.0.0",
    "socket.io": "4.7.2",
    "ws": "8.13.0"
  },
  "devDependencies": {
    "@modern-js/app-tools": "workspace:*",
    "@modern-js/core": "workspace:*",
    "@modern-js/module-tools": "workspace:*",
    "@modern-js/runtime": "workspace:*",
    "@modern-js/server-core": "workspace:*",
    "@modern-js/types": "workspace:*",
    "@scripts/build": "workspace:*",
    "@swc/helpers": "0.5.1",
    "@types/node": "^14",
    "@types/ws": "^8.5.5",
    "type-fest": "^4.1.0",
    "typescript": "^5"
  },
  "peerDependencies": {
    "@modern-js/runtime": "workspace:^2.30.0"
  },
  "peerDependenciesMeta": {
    "@modern-js/runtime": {
      "optional": true
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "provenance": true,
    "types": "./dist/types/index.d.ts"
  }
}
