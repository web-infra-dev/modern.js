export default async (type, { query }) => {
  const { username } = query;
  return {
    type,
    username,
    message: 'Hello Modern.js',
  };
};

export const post = async (type, { query, data }) => {
  const { username } = query;
  const { message } = data;
  return Promise.resolve({
    type,
    username,
    message: `Hello Modern.js. Your message: ${message}`,
  });
};
