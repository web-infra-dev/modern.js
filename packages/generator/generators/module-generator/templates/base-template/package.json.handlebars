{
  "name": "{{ name }}",
  "version": "0.1.0",
  {{#unless isPublic}}
  "main": "./src/index.{{ language }}",
  {{/unless}}
  {{#if isPublic}}
  "jsnext:source": "./src/index.{{ language }}",
  {{#if isTs}}
  "types": "./dist/types/index.d.ts",
  {{/if}}
  "main": "./dist/js/node/index.js",
  "module": "./dist/js/treeshaking/index.js",
  "jsnext:modern": "./dist/js/modern/index.js",
  {{/if}}
  "scripts": {
    {{#if isPublic}}
    "prepare": "modern build",
    "prepublishOnly": "modern build --platform",
    {{/if}}
    "dev": "modern dev",
    {{#if isPublic}}
    "build": "modern build",
    {{/if}}
    {{#unless isMonorepoSubProject}}
    "reset": "del-cli node_modules",
    "lint": "modern lint",
    "change": "modern change",
    "bump": "modern bump",
    "pre": "modern pre",
    "release": "modern release",
    {{/unless}}
    "new": "modern new",
    "test": "modern test --passWithNoTests"
  },
  {{#unless isMonorepoSubProject}}
  "engines": {
    "node": ">=14.17.6"
  },
  "eslintConfig": {
    "extends": [
      "@modern-js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet",
      "git add"
    ],
    "*.{js,jsx,mjs,mjsx,cjs,cjsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet",
      "git add"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  {{/unless}}
  "dependencies": {
    "@babel/runtime": "^7"
  },
  "peerDependencies": {
    "react": "^17"
  },
  "devDependencies": {
    "react": "^17",
    "@modern-js/module-tools": "^1.0.0",
    "@modern-js/plugin-jarvis": "^1.0.0",
    "@modern-js/plugin-testing": "^1.0.0",
    "del-cli": "^4.0.1"
  },
  "sideEffects": [
    "*.css",
    "*.less",
    "*.sass",
    "*.scss"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
