{
  "name": "{{ name }}",
  "version": "0.1.0",
  {{#unless isPublic}}
  "main": "./src/index.{{ language }}",
  {{/unless}}
  {{#if isPublic}}
  "jsnext:source": "./src/index.{{ language }}",
  {{#if isTs}}
  "types": "./dist/types/index.d.ts",
  {{/if}}
  "main": "./dist/lib/index.js",
  "module": "./dist/es/index.js",
  {{/if}}
  "scripts": {
    {{#if isPublic}}
    {{#if isMonorepoSubProject}}
    "prepare": "modern build",
    {{else}}
    "prepare": "modern build && husky install",
    {{/if}}
    {{/if}}
    "dev": "modern dev",
    {{#if isPublic}}
    "build": "modern build",
    {{/if}}
    {{#unless isMonorepoSubProject}}
    "reset": "rimraf ./**/node_modules",
    "lint": "modern lint",
    "change": "modern change",
    "bump": "modern bump",
    "pre": "modern pre",
    "change-status": "modern change-status",
    "gen-release-note": "modern gen-release-note",
    "release": "modern release",
    {{/unless}}
    "new": "modern new",
    "test": "modern test",
    "upgrade": "modern upgrade"
  },
  {{#unless isMonorepoSubProject}}
  "lint-staged": {
    "*.{ts,tsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet"
    ],
    "*.{js,jsx,mjs,mjsx,cjs,cjsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  {{/unless}}
  "dependencies": {},
  "peerDependencies": {},
  "devDependencies": {
    "@modern-js/module-tools": "{{modernVersion}}",
    "@modern-js/eslint-config": "{{modernVersion}}",
    "@modern-js/tsconfig":"{{modernVersion}}",
    "@modern-js-app/eslint-config": "{{modernVersion}}",
    "rimraf": "~3.0.2",
    "lint-staged": "~13.1.0",
    "prettier": "~2.8.1",
    "husky": "~8.0.1"
  },
  "sideEffects": [],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
