{
  "name": "{{ name }}",
  "version": "0.1.0",
  "scripts": {
    "reset": "npx rimraf ./**/node_modules",
    "dev": "modern dev",
    "build": "modern build",
    "start": "modern start",
    "new": "modern new",
    "lint": "modern lint",
    {{#unless isMonorepoSubProject}}
    "prepare": "modern build && husky install",
    {{/unless}}
    "upgrade": "modern upgrade"
  },
  {{#unless isMonorepoSubProject}}
  "engines": {
    "node": ">=14.17.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet"
    ],
    "*.{js,jsx,mjs,mjsx,cjs,cjsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  {{/unless}}
  "dependencies": {
    "@modern-js/runtime": "{{modernVersion}}",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@modern-js/app-tools": "{{modernVersion}}",
    "@modern-js/tsconfig":"{{modernVersion}}",
    "rimraf": "^3.0.2",
    "lint-staged": "^11.2.6",
    "prettier": "^2.6.2",
    "husky": "^8.0.0"
  }
}
