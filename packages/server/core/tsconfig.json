{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "declaration": false,
    "jsx": "preserve",
    "baseUrl": "./",
    "isolatedModules": true,
    "paths": {
      "@core/*": ["./src/core/*"],
      "@config/*": ["./src/types/config/*"],
      "@base/*": ["./src/base/*"]
    },
    "types": ["node", "jest"]
  },
  "include": ["src"]
}
