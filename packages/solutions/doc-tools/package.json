{
  "name": "@modern-js/doc-tools",
  "description": "The Documentation Framework of Modern.js.",
  "homepage": "https://modernjs.dev/doc-tools",
  "bugs": "https://github.com/web-infra-dev/modern.js/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/web-infra-dev/modern.js",
    "directory": "packages/solutions/doc-tools"
  },
  "license": "MIT",
  "version": "2.31.2",
  "jsnext:source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "default": "./dist/index.js"
    },
    "./runtime": {
      "default": "./runtime.ts"
    },
    "./theme": {
      "default": "./theme.ts"
    }
  },
  "bin": {
    "modern": "./bin/modern.js",
    "modern-doc": "./bin/modern.js"
  },
  "scripts": {
    "prepublishOnly": "only-allow-pnpm",
    "dev": "modern-lib dev",
    "build": "modern-lib build",
    "reset": "rimraf ./**/node_modules",
    "lint": "modern-lib lint",
    "change": "modern-lib change",
    "bump": "modern-lib bump",
    "pre": "modern-lib pre",
    "change-status": "modern-lib change-status",
    "gen-release-note": "modern-lib gen-release-note",
    "release": "modern-lib release",
    "new": "modern-lib new",
    "test": "jest test --passWithNoTests",
    "upgrade": "modern-lib upgrade"
  },
  "engines": {
    "node": ">=14.17.6"
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  "dependencies": {
    "@modern-js/core": "workspace:*",
    "@modern-js/doc-core": "workspace:*",
    "@modern-js/utils": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=17"
  },
  "devDependencies": {
    "@scripts/build": "workspace:*",
    "@scripts/jest-config": "workspace:*",
    "@modern-js/plugin-testing": "workspace:*",
    "@modern-js/tsconfig": "workspace:*",
    "@types/jest": "^26.0.9",
    "@types/node": "^14",
    "@types/react": "^18",
    "husky": "^8",
    "lint-staged": "~13.1.0",
    "prettier": "^2.6.2",
    "react": "^17",
    "rimraf": "^3.0.2",
    "typescript": "^5"
  },
  "sideEffects": [
    "*.css",
    "*.less",
    "*.sass",
    "*.scss"
  ],
  "files": [
    "bin",
    "dist",
    "runtime.ts",
    "theme.ts"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  }
}
