{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true,
    "outDir": "dist",
    "isolatedModules": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "esModuleInterop": true
  },
  "include": ["./src"]
}
