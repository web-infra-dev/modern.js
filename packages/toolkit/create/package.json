{
  "name": "@modern-js/create",
  "description": "The meta-framework suite designed from scratch for frontend-focused modern web development.",
  "homepage": "https://modernjs.dev",
  "bugs": "https://github.com/modern-js-dev/modern.js/issues",
  "repository": "modern-js-dev/modern.js",
  "license": "MIT",
  "keywords": [
    "react",
    "framework",
    "modern",
    "modern.js"
  ],
  "version": "1.5.0",
  "jsnext:source": "./src/index.ts",
  "types": "./src/index.ts",
  "main": "./dist/js/node/node.js",
  "module": "./dist/js/treeshaking/index.js",
  "jsnext:modern": "./dist/js/modern/index.js",
  "bin": {
    "create": "./bin/run.js"
  },
  "files": [
    "/bin",
    "/dist/js/node/main.js"
  ],
  "exports": {
    ".": {
      "node": {
        "jsnext:source": "./src/index.ts",
        "import": "./dist/js/modern/index.js",
        "require": "./dist/js/node/index.js"
      },
      "default": "./dist/js/treeshaking/index.js"
    }
  },
  "scripts": {
    "prepare": "pnpm build && pnpm build:csmith",
    "prepublishOnly": "only-allow-pnpm",
    "new": "modern new",
    "build": "wireit",
    "build:csmith": "wireit",
    "test": "wireit"
  },
  "devDependencies": {
    "@babel/runtime": "^7.18.0",
    "@modern-js/codesmith": "^1.3.0",
    "@modern-js/codesmith-tools": "^1.2.1",
    "@scripts/build": "workspace:*",
    "@modern-js/generator-plugin-plugin": "workspace:*",
    "@modern-js/plugin-i18n": "workspace:*",
    "@modern-js/repo-generator": "workspace:*",
    "@modern-js/utils": "workspace:*",
    "@types/jest": "^27",
    "@types/node": "^14",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "ts-node": "^10.1.0",
    "typescript": "^4",
    "jest": "^27",
    "@scripts/jest-config": "workspace:*"
  },
  "modernConfig": {
    "output": {
      "packageMode": "node-js",
      "disableSourceMap": true
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "main": "./dist/js/node/main.js",
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "types": "./dist/types/index.d.ts"
  },
  "wireit": {
    "build": {
      "command": "modern build",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json"
      ],
      "output": [
        "dist/**/*",
        "!dist/node/main.js"
      ]
    },
    "build:csmith": {
      "command": "csmith-tools build",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json"
      ],
      "output": [
        "dist/node/main.js"
      ]
    },
    "test": {
      "command": "jest --passWithNoTests",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json",
        "tests/**/*"
      ],
      "output": []
    }
  }
}
