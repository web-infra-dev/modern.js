{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "declaration": false,
    "jsx": "preserve",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./shared/*"],
      "@api/*": ["./api/*"]
    },
    "types": ["jest"]
  },
  "include": [
    "src",
    "shared",
    "config",
    "api",
    "modern.config.ts",
    "api/index.ts"
  ]
}
