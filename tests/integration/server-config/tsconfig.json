{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "declaration": false,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@shared/*": [
        "./shared/*"
      ],
      "@api/*": [
        "./api/*"
      ]
    }
  },
  "include": [
    "src",
    "shared",
    "config",
    "api",
    "tests",
    "plugins",
    "server"
  ]
}