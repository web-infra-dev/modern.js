{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@card/*": ["./src/card/*"]
    },
    "rootDir": "src",
    "outDir": "./dist"
  },
  "references": [
    {
      "path": "../utils"
    }
  ],
  "include": ["src"]
}
